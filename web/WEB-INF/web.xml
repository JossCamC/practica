<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ControlCliente</servlet-name>
        <servlet-class>Controlador.ControlCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControlProveedor</servlet-name>
        <servlet-class>Controlador.ControlProveedor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControlCategoria</servlet-name>
        <servlet-class>Controlador.ControlCategoria</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControlProducto</servlet-name>
        <servlet-class>Controlador.ControlProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControlRegistroVenta</servlet-name>
        <servlet-class>Controlador.ControlRegistroVenta</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControlCliente</servlet-name>
        <url-pattern>/controlcliente.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControlProveedor</servlet-name>
        <url-pattern>/ControlProveedor.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControlCategoria</servlet-name>
        <url-pattern>/ControlCategoria.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControlProducto</servlet-name>
        <url-pattern>/ControlProducto.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControlRegistroVenta</servlet-name>
        <url-pattern>/ControlRegistroVenta.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
